{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:wc/recommended",
        "plugin:lit/recommended",
        "plugin:storybook/recommended",
        "plugin:jest-dom/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest-dom"
    ],
    "rules": {
        "no-trailing-spaces": [
            "error"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "ConditionalExpression",
                    "TemplateLiteral"
                ],
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": [
            "error",
            "smart-tabs"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "lit/binding-positions": "off"        
    },
    "settings": {
        "wc": {
            "elementBaseClasses": [
                "LitElement"
            ]
        }
    }
}
