{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-scss"
    ],
    "overrides": [
        {
          "files": ["*.js"],
          "customSyntax": "postcss-lit"
        }
    ],
    "rules": {
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
        "no-descending-specificity": null
    }
}